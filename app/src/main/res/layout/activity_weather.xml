<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunny_sky"
    tools:context=".Weather">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/ctiybutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/prefectures_button"
            android:text="読み込み中"
            android:textSize="70px" />

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:srcCompat="@drawable/sunny" />

        <TextView
            android:id="@+id/dateT"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="読み込み中"
            android:background="#77ffffff"
            android:textColor="@android:color/background_dark"
            android:textSize="70px" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#77ffffff"
            android:gravity="center"
            android:text="読み込み中"
            android:textColor="@android:color/background_dark"
            android:textSize="70px" />

        <TextView
            android:id="@+id/windspeed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#77ffffff"
            android:gravity="center"
            android:text="読み込み中"
            android:textColor="@android:color/background_dark"
            android:textSize="70px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp">

            <Button
                android:id="@+id/before_day"
                android:layout_width="112.5px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/weather_button"
                android:text="１日前へ"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />

            <Button
                android:id="@+id/before_hour"
                android:layout_width="112.5px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/weather_button"
                android:text="前へ"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />

            <Button
                android:id="@+id/after_hour"
                android:layout_width="112.5px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/weather_button"
                android:text="次へ"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />

            <Button
                android:id="@+id/after_day"
                android:layout_width="112.5px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/weather_button"
                android:text="１日後へ"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>